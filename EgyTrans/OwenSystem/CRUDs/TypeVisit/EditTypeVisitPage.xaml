<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EgyTrans.OwenSystem.CRUDs.TypeVisit.EditTypeVisitPage"
             Title="Edit Type Visit Page">
    <StackLayout Padding="20">
        <Label Text="Edit Type Visit" FontSize="Large" FontAttributes="Bold" HorizontalOptions="Center"/>

        <Label Text="Type Name:" FontAttributes="Bold" FontSize="16"/>
        <Entry Text="{Binding ClientTypeVisit.TypeName}" Placeholder="Type Name"/>

        <Button Text="Save Changes" Clicked="SaveChangesButton_Clicked"/>
        <Button Text="Delete" Clicked="DeleteButton_Clicked" BackgroundColor="Red" TextColor="White"/>
    </StackLayout>
</ContentPage>
